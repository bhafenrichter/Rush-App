@model Rush_App.Models.ProfileViewModel
@{
    ViewBag.Title = "Profile";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="panel panel-default col-md-8" style="margin:auto;">
        <div class="panel-body">
            <div class="base-info" style="text-align:center;">
                <img src="https://scontent-atl3-1.xx.fbcdn.net/hprofile-xpt1/v/t1.0-1/p40x40/12191494_10208107295821175_3986150796179064957_n.jpg?oh=f43eb642bcf6715a56f46182e1770ced&oe=57593265" style="width:250px; height:250px; border-radius:150px;" />
                <div id="social-media" class="btn-group pull-right" style="position:absolute; top:15px; right:15px;">
                            @if (Model.User.Facebook != null)
                            {
                                <a href="https://@Model.User.Facebook" class="btn btn-info" target="_blank"><i class="fa fa-facebook"></i></a>
                            }
                            @if (Model.User.Twitter != null)
                            {
                                <a href="https://@Model.User.Twitter" class="btn btn-primary" target="_blank"><i class="fa fa-twitter"></i></a>
                            }
                            <button class="btn btn-default" data-toggle="modal" data-target="#editProfile"><i class="fa fa-cog"></i></button>
                </div>


                
                <h2>@Model.User.FirstName @Model.User.LastName</h2>
                <h4>@Model.User.Hometown, @Model.User.HomeState</h4>
            </div>
            <div class="row" style="text-align:center;">
                <div class="col-md-4">
                    <fieldset>
                        <legend>Education</legend>
                        <h2>@Model.User.University.Name</h2>
                        <h4>@Model.User.Year</h4>
                    </fieldset>
                    
                </div>
                <div class="col-md-4">
                    <fieldset>
                        <legend>High School</legend>
                        <h2>@Model.User.GPA</h2>
                        <h4>GPA</h4>
                    </fieldset>
                </div>
                <div class="col-md-4">
                    <fieldset>
                        <legend>Short Bio</legend>
                        <p>Introduce Yourself. Begin the bio by introducing yourself, and always write in the third person. Education and Credentials.</p>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editProfile" tabindex="-1" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <h4>Edit Account Details</h4>
            </div>
            @using (Html.BeginForm())
            {
                @Html.Hidden("ID", Model.User.ID)
                <div class="container">
                    <div class="form-group">
                        <label class="control-label">Email Address</label>
                        @Html.TextBox("Email", Model.User.Email, new { @class = "form-control", @placeholder = "Email Address", @style = "width:100%;" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Password</label>
                        @Html.TextBox("Password", Model.User.Password, new { @class = "form-control", @placeholder = "Password" })
                    </div>

                    @*<div class="form-group">
            @Html.DropDownListFor(x => x.User.University, new SelectList(Model.Universities, "ID", "Name",Model.User.UniversityID), "Select University", new { @class = "form-control" })
        </div>*@

                    <div class="form-group">
                        <label class="control-label">First Name</label>
                        @Html.TextBox("FirstName", Model.User.FirstName, new { @class = "form-control", @placeholder = "First Name" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Last Name</label>
                        @Html.TextBox("LastName", Model.User.LastName, new { @class = "form-control", @placeholder = "Last Name" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Year in School</label>
                        @Html.TextBox("Year", Model.User.Year, new { @class = "form-control", @placeholder = "Year in School" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">High School GPA</label>
                        @Html.TextBox("GPA", Model.User.GPA, new { @class = "form-control", @placeholder = "High School GPA" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Major</label>
                        @Html.TextBox("Major", Model.User.Major, new { @class = "form-control", @placeholder = "Major" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Hometown</label>
                        @Html.TextBox("Hometown", Model.User.Hometown, new { @class = "form-control", @placeholder = "Hometown" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Home State</label>
                        @Html.DropDownList("HomeState", new SelectList(Model.States, "Abbreviation", "Name", Model.User.HomeState), "Select State", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Facebook (Optional)</label>
                        @Html.TextBox("Facebook", Model.User.Facebook, new { @class = "form-control", @placeholder = "Facebook" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Twitter (Optional)</label>
                        @Html.TextBox("Twitter", Model.User.Twitter, new { @class = "form-control", @placeholder = "Twitter" })
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="btn-group">
                        <button type="submit" class="btn btn-success">Update</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            }

        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


